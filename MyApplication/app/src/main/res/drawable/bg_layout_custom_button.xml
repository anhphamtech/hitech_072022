<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/bright_green"/>
            <corners
                android:radius="10dp"/>
            <size
                android:height="50dp"
                android:width="150dp"/>
            <stroke
                android:color="@color/black"
                android:width="1dp"/>
            <gradient
                android:startColor="@color/bright_green"
                android:endColor="@color/Light_Green"
                android:centerColor="@color/Teal"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/white"/>
            <corners
                android:radius="10dp"/>
            <size
                android:width="150dp"
                android:height="50dp"/>
            <stroke
                android:color="@color/black"
                android:width="1dp"/>
        </shape>
    </item>
</selector>