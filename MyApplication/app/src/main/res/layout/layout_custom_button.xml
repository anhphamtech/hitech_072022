<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_layout_custom_button">

    <TextView
        android:id="@+id/Btn_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_with"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Btn_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/Btn_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/android"
        android:contentDescription="@string/sign_in_with"
        android:layout_marginStart="5dp"

        app:layout_constraintBottom_toBottomOf="@id/Btn_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btn_textView"
        app:layout_constraintTop_toTopOf="@id/Btn_textView"/>


</androidx.constraintlayout.widget.ConstraintLayout>